<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_main_normal">
    <LinearLayout
        android:id="@+id/webPhotoCommendShowBottomLLy"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:padding="5dp"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:background="@color/bg_main_normal"
        >
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/imgPhotoTextContentBack"
            android:src="@drawable/red_back_selector"
            android:layout_marginBottom="5dp"
            android:scaleType="center"
            />
        <TextView
            android:id="@+id/tvPhotoCommendWriteCommend"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginTop="7dp"
            android:layout_marginBottom="3dp"
            android:layout_marginLeft="12dp"
            android:layout_weight="3"
            android:hint="@string/write_comment"
            android:drawableLeft="@mipmap/pen"
            android:drawablePadding="5dp"
            android:textColorHint="@color/e"
            android:background="@drawable/tv_comment_border"
            android:layout_marginRight="20dp"
            />

        <ImageView
            android:id="@+id/imgVPhotoCommendfindCommend"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:layout_marginLeft="5dp"
            android:src="@mipmap/text_content_comment2"
            android:scaleType="fitCenter"
            android:padding="8dp"
            />
        <!--<ImageView-->
            <!--android:id="@+id/imgVPhotoCommendaddCollection"-->
            <!--android:layout_width="0dp"-->
            <!--android:layout_height="40dp"-->
            <!--android:layout_weight="1"-->
            <!--android:layout_marginLeft="5dp"-->
            <!--android:src="@mipmap/text_content_private2"-->
            <!--android:scaleType="fitCenter"-->
            <!--android:padding="8dp"-->
            <!--/>-->
        <!--<ImageView-->
            <!--android:id="@+id/imgVPhotoCommendSocialShare"-->
            <!--android:layout_width="0dp"-->
            <!--android:layout_height="40dp"-->
            <!--android:layout_weight="1"-->
            <!--android:layout_marginLeft="5dp"-->
            <!--android:src="@mipmap/text_content_return2"-->
            <!--android:scaleType="fitCenter"-->
            <!--android:padding="8dp"-->
            <!--/>-->

    </LinearLayout>

    <com.iimedia.xwsdk.ui.NewsScroll
        android:id="@+id/sclPhotoNewsContent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical"
        android:scrollbarStyle="insideOverlay"
        android:fadingEdge="vertical"
        android:layout_above="@id/webPhotoCommendShowBottomLLy"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:id="@+id/rlyPhotoTextContextTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone">
                <TextView
                    android:id="@+id/tvPhotoTextContextTitle_backgroud"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="@color/f"
                    android:layout_alignParentTop="true" />
                <!--<ImageView-->
                    <!--android:layout_width="50dp"-->
                    <!--android:layout_height="48dp"-->
                    <!--android:id="@+id/imgPhotoTextContentBack"-->
                    <!--android:src="@drawable/gray_back_selector"-->
                    <!--android:scaleType="center" />-->
                <TextView
                    android:id="@+id/tvPhotoUnReadCommentNum"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:textSize="14sp"
                    android:textColor="@color/a"
                    android:text="您有新的回复（0）"
                    android:padding="5dp"
                    android:layout_alignParentRight="true"
                    android:gravity="center"
                    android:visibility="invisible"
                    android:layout_marginRight="8dp"
                    />
            </RelativeLayout>
            <View
                android:id="@+id/focuslinePhoto"
                android:layout_below="@id/rlyPhotoTextContextTitle"
                android:layout_width="match_parent"
                android:layout_height="0.1dp"/>
            <RelativeLayout
                android:layout_below="@id/focuslinePhoto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/bg_main_normal"
                >
                <TextView
                    android:id="@+id/unPhotoReadRedLine_0"
                    android:layout_width="6dp"
                    android:layout_height="15dp"
                    android:background="@color/f"
                    android:layout_marginTop="8dp"
                    android:layout_marginLeft="15dp"
                    android:visibility="gone"
                    />
                <TextView
                    android:id="@+id/tvPhotoHotCommend"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/hot_comment"
                    android:padding="0dp"
                    android:textColor="@color/e"
                    android:textSize="@dimen/len10"
                    android:layout_marginLeft="12dp"
                    android:layout_toRightOf="@id/unPhotoReadRedLine_0"
                    android:layout_marginTop="5dp"
                    android:textStyle="bold"
                    android:visibility="gone"
                    />
                <ImageView
                    android:id="@+id/imgVPhotoCommendshotcommends"
                    android:layout_width="200dp"
                    android:layout_height="80dp"
                    android:layout_marginLeft="0dp"
                    android:src="@mipmap/hot_commends"
                    />
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/lvPhotoHotCommends"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/bg_main_normal"
                    android:layout_below="@id/imgVPhotoCommendshotcommends"
                    android:divider="@null"
                    android:dividerHeight="0sp"
                    >
                </android.support.v7.widget.RecyclerView>
                <!--<TextView-->
                    <!--android:id="@+id/unPhotoReadRedLine_1"-->
                    <!--android:layout_width="6dp"-->
                    <!--android:layout_height="15dp"-->
                    <!--android:background="@color/f"-->
                    <!--android:layout_marginLeft="15dp"-->
                    <!--android:layout_marginTop="8dp"-->
                    <!--android:layout_below="@id/lvPhotoHotCommends"-->
                    <!--android:visibility="gone"-->
                    <!--/>-->
                <!--<TextView-->
                    <!--android:id="@+id/tvPhotoNewCommend"-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:text="@string/new_comment"-->
                    <!--android:textColor="?attr/main_textcolor"-->
                    <!--android:textSize="@dimen/len10"-->
                    <!--android:textStyle="bold"-->
                    <!--android:layout_marginLeft="12dp"-->
                    <!--android:layout_below="@id/lvPhotoHotCommends"-->
                    <!--android:layout_toRightOf="@id/unPhotoReadRedLine_1"-->
                    <!--android:layout_marginTop="5dp"-->
                    <!--android:visibility="gone"-->
                    <!--/>-->
                <ImageView
                    android:id="@+id/imgVPhotoCommendsnewcommends"
                    android:layout_width="200dp"
                    android:layout_height="80dp"
                    android:src="@mipmap/new_commends"
                    android:layout_below="@id/lvPhotoHotCommends"
                    />
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/lvPhotoNewCommends"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/bg_main_normal"
                    android:layout_below="@id/imgVPhotoCommendsnewcommends"
                    android:divider="@null"
                    android:dividerHeight="0sp"
                    >
                </android.support.v7.widget.RecyclerView>

                <TextView
                    android:id="@+id/tvPhotoMoreCommends"
                    android:layout_below="@id/lvPhotoNewCommends"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:gravity="center"
                    android:text="加载更多评论"
                    android:textSize="@dimen/len9"
                    android:textColor="@color/c"
                    android:background="@color/bg_main_normal"
                    />
            </RelativeLayout>
        </RelativeLayout>
    </com.iimedia.xwsdk.ui.NewsScroll>
</RelativeLayout>
