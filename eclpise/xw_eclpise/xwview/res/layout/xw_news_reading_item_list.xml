<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bg_main_normal"
    app:cardElevation="5dp"
    app:cardPreventCornerOverlap="true"
    app:cardUseCompatPadding="true">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <ImageView
                android:id="@+id/video_img"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:scaleType="centerCrop" />
            <ImageView
                android:id="@+id/img_video"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/play40"
                android:layout_alignBottom="@id/video_img"
                android:layout_marginLeft="5dp"
                android:layout_marginBottom="6dp"
                />
            <TextView
                android:id="@+id/tv_browse"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/video_img"
                android:layout_toRightOf="@id/img_video"
                android:textColor="@color/a"
                android:text="5.0万"
                android:padding="5dp"
                android:textSize="@dimen/len14"
                />
            <TextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/video_img"
                android:layout_alignParentRight="true"
                android:textColor="@color/a"
                android:padding="5dp"
                android:text="00:00"
                android:textSize="@dimen/len14"
                />
        </RelativeLayout>

        <TextView
            android:id="@+id/video_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:maxLines="2"
            android:ellipsize="end"
            android:textColor="@color/e"
            android:text="鲜知阅读"/>
    </LinearLayout>
</android.support.v7.widget.CardView>